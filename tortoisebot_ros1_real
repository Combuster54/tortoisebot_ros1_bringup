# Start from ROS base image
FROM ros:noetic-ros-base

# Make a catkin workspace
WORKDIR /
RUN mkdir -p /catkin_ws/src
WORKDIR /catkin_ws/src

SHELL [ "/bin/bash" , "-c" ]

# Install dependencies
RUN apt-get update && apt-get install -y git \
    # && apt-get install -y git \
    ros-noetic-joy ros-noetic-teleop-twist-joy \
    ros-noetic-teleop-twist-keyboard ros-noetic-amcl \
    ros-noetic-map-server ros-noetic-move-base \
    ros-noetic-urdf ros-noetic-xacro \
    ros-noetic-rqt-image-view ros-noetic-gmapping \
    ros-noetic-navigation ros-noetic-joint-state-publisher \
    ros-noetic-robot-state-publisher ros-noetic-slam-gmapping \
    ros-noetic-dwa-local-planner ros-noetic-joint-state-publisher-gui \
    ros-noetic-gazebo-ros-pkgs \
    ros-noetic-compressed-image-transport \
    libraspberrypi-dev libraspberrypi0 \
    python3-dev python3-rpi.gpio

# Install rasapicam
RUN sudo sh -c 'echo "deb https://packages.ubiquityrobotics.com/ubuntu/ubiquity $(lsb_release -sc) main" > /etc/apt/sources.list.d/ubiquity-latest.list' \
&& sudo apt-key adv --keyserver hkp://ha.pool.sks-keyservers.net:80 --recv-key C3032ED8 \
&& sudo apt-get update \
&& sudo apt install ros-noetic-raspicam-node

# Download Tortoisebot repo
RUN source /opt/ros/noetic/setup.bash \ 
&& cd /catkin_ws/src \
&& catkin_init_workspace \
&& git clone -b noetic https://github.com/rigbetellabs/tortoisebot.git \
&& git clone -b noetic-devel https://github.com/UbiquityRobotics/raspicam_node.git

# Build workspace
# RUN source /opt/ros/noetic/setup.bash \
# && cd /catkin_ws \
# && catkin_make \
# && source /catkin_ws/devel/setup.bash

#Â COPY ./ /catkin_ws/src/move_and_turn

WORKDIR /catkin_ws

# Build your ROS packages
RUN /bin/bash -c "source /opt/ros/noetic/setup.bash; cd /catkin_ws; catkin_make"

# Source the workspace every time a new shell is opened in the container
RUN echo source /catkin_ws/devel/setup.bash >> ~/.bashrc

# Set the entry point to start a bash shell
#CMD ["/bin/bash"]
